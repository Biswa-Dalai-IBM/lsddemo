service myFlow {
  INVOKE pub.math:addInts {
	    comment : "Adds two numbers"
	    input {
		    a -> num1;
		    b -> num2;
	 	 }
	 	output {
	    	result -> sum;
	  	}
  	};
  MAP;
  LOOP {
  	comment : "Adds two numbers"
  	inputArray : "x/y"
  	outputArray : "x/y"
  	
    INVOKE pub.math:addInts {
	    validateOutput : false
	    input {
		    a -> num1;
		    b -> num2;
	 	 }
	 	output {
	    	result -> sum;
	  	}
  	};
    MAP;
  }
  SEQUENCE {
  	exitOn : DONE
    INVOKE pub.math:addInts {
	    input {
		    a -> num1;
		    b -> num2;
	 	 }
	 	output {
	    	result -> sum;
	  	}
  	};
  	INVOKE pub.math:addInts;
    EXIT;
  }
  REPEAT {
    INVOKE pub.math:addInts;
  }
}
