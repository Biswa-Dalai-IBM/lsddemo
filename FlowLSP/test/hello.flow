service myFlow {
  INVOKE pub.math:addInts {
	    comment : "Adds two numbers"
	    input {
		    copy a -> num1;
		    copy b -> num2;
	 	 }
	 	output {
	    	copy result -> sum;
	  	}
  	};
  LOOP {
  	comment : "Adds two numbers"
  	inputArray : "x/y"
  	outputArray : "x/y"
  	
    INVOKE pub.math:addInts {
	    validateOutput : false
	    input {
		    copy a -> num1;
		    copy b -> num2;
	 	 }
	 	output {
	    	copy result -> sum;
	  	}
  	};
  }
  SEQUENCE {
  	exitOn : "DONE"
    INVOKE pub.math:addInts {
	    input {
		    copy a -> num1;
		    copy b -> num2;
	 	 }
	 	output {
	    	copy result -> sum;
	  	}
  	};
  	INVOKE pub.math:addInts;
    EXIT;
  }
  REPEAT {
    INVOKE pub.math:addInts;
  }
}
